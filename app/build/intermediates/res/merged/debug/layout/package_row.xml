<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_item_margin"
        android:layout_marginRight="@dimen/feed_item_margin"
        android:layout_marginTop="@dimen/feed_item_margin"
        android:background="@drawable/bg_parent_rounded_corner"
        android:orientation="vertical"
        android:paddingBottom="@dimen/feed_item_padding_top_bottom"
        >

        <LinearLayout
            android:id="@+id/relHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pkg_heading"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="false"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/pkgname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="PACKAGE NAME"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <TextView
            android:id="@+id/labname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:gravity="center"
            android:text="LAB NAME"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_below="@+id/relHome"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp" />
        <LinearLayout
            android:id="@+id/testparam_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginRight="12dp"
            android:layout_below="@+id/labname"
            android:layout_marginLeft="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/param_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Test Parameters : "
                android:textColor="#000000" />
            <TextView
                android:id="@+id/test_param"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="46"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mrp_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginRight="12dp"
            android:layout_below="@+id/testparam_layout"
            android:layout_marginLeft="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/mrp_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="MRP : "
                android:textColor="#000000"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/mrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="₹ 4600"
                android:textSize="16dp"
                android:textColor="#FF0000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/discount_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginRight="12dp"
            android:layout_below="@+id/mrp_layout"
            android:layout_marginLeft="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/discount_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Discount : "
                android:textColor="#000000"
                android:textSize="17dp"/>
            <TextView
                android:id="@+id/dicount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="20 % OFF"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"

            android:layout_marginRight="12dp"

            android:layout_below="@+id/discount_layout"
            android:layout_marginLeft="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/price_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Price : "
                android:textColor="#000000"
                android:textSize="17dp"/>
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="₹ 850"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#555555" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_testdetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/orange_button"
            android:layout_below="@+id/price_layout"
            android:layout_marginLeft="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/testdetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="TEST DETAILS "
                android:textColor="@android:color/white"
               />


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/feed_item_margin"
            android:layout_marginRight="@dimen/feed_item_margin"
            android:layout_marginTop="@dimen/feed_item_margin"
            android:background="@drawable/bg_parent_round_history_green"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/relHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/order_heading_green"
                android:clickable="false"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp">

                <TextView
                    android:id="@+id/pkgname"
                    android:layout_width="362dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Payment Mode"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/edit_booktype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="4dp"
                android:layout_marginTop="9dp"
                android:background="@drawable/book_edit"
                android:clickable="true"
                android:visibility="gone"
                android:padding="10dp"></RelativeLayout>

            <TextView
                android:id="@+id/cos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relHome"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Cash on Sample Pickup (COS)"
                android:textColor="#7A7A7A"
                android:textSize="15dp"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:drawableLeft="@drawable/ic_check_black"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/separator11"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/cos"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="#C4C4C4"
                android:clickable="false"
                android:visibility="gone"
                android:orientation="vertical"></LinearLayout>



        </RelativeLayout>

    </LinearLayout>

</merge>
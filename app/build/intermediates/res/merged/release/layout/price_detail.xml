<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/feed_item_margin"
        android:layout_marginRight="@dimen/feed_item_margin"
        android:layout_marginTop="@dimen/feed_item_margin"
        android:background="@drawable/bg_parent_rounded_corner"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/sub_total_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/order_id_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Sub Total"
                android:textColor="#565656"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/sub_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/order_id_heading"
                android:layout_marginRight="5dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textSize="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/discount_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub_total_layout"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/discount_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Discount"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/discount_heading"
                android:layout_below="@+id/separator"
                android:layout_marginRight="5dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@android:color/holo_green_dark"
                android:textSize="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/promo_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discount_lay"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="100">

            <TextView
                android:id="@+id/promo_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Promo Discount"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/promo_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/promo_heading"
                android:layout_below="@+id/separator"
                android:layout_marginRight="5dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@android:color/holo_green_dark"
                android:textSize="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/price_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/promo_lay"
            android:orientation="horizontal"
            android:weightSum="100">

            <TextView
                android:id="@+id/yourprice_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Your Price"
                android:textColor="#565656"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/your_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/yourprice_heading"
                android:layout_marginRight="5dp"
                android:layout_weight="50"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>
</merge>
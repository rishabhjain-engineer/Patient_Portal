<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/test_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Executive Health Package"
                android:textColor="#323232"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/test_parameter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/test_detail_name"
                android:layout_marginTop="5dp"
                android:text="Test parameters: 37"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/test_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/test_parameter"
                android:layout_marginTop="5dp"
                android:text="CBC, ESR, Screening (Liver, Lipid, Kidney), Sugar Fasting"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/discount_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/test_description"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/test_detail_name"
                    android:layout_marginTop="5dp"
                    android:text="Discount: "
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/dis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/test_parameter"
                    android:layout_marginTop="5dp"
                    android:text="80.01%"
                    android:textColor="#4CAF50"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mrp_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/discount_head"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/test_detail_name"
                    android:layout_marginTop="5dp"
                    android:text="MRP ₹ "
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/price_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/test_parameter"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/price_cut"
                    android:padding="2dp"
                    android:text="2,299"
                    android:textSize="14dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mrp_head"
                android:text="₹ 850"
                android:textColor="#555555"
                android:textSize="17dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/lab_logo"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_below="@+id/price"
                android:layout_marginTop="5dp" />

            <TextView
                android:id="@+id/etCentreName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lab_logo"
                android:text="Accuprobe Healthcare And Diagnostics"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/etAreaHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etCentreName"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="-3dp"
                android:drawableLeft="@drawable/ic_location"
                android:text="Area Name"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/navigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/etAreaHeader"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/etRating"
                android:background="@drawable/bg_parent_rounded_corner"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:clickable="true"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="4dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/black_nav" />
            </LinearLayout>

            <TextView
                android:id="@+id/etRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/navigation"
                android:layout_toEndOf="@+id/price"
                android:layout_toRightOf="@+id/price"
                android:background="#4CAF50"
                android:gravity="center"
                android:paddingBottom="4.5dp"
                android:paddingLeft="5dp"
                android:layout_marginLeft="-5dp"
                android:paddingRight="5dp"
                android:paddingTop="4.5dp"
                android:text="3.0"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/separator3"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_below="@+id/etRating"
                android:layout_marginTop="8dp"
                android:clickable="false"
                android:src="@drawable/dotted" />

            <RelativeLayout
                android:id="@+id/book_online"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separator3"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:gravity="center"
                android:scaleType="centerInside">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/pic_border_green" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:clickable="true"
                    android:src="@drawable/bookonline" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/etRating"
                android:layout_alignStart="@+id/etRating"
                android:layout_alignTop="@+id/book_online"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="14dp"
                android:text="Book online or via phone" />

            <RelativeLayout
                android:id="@+id/free_sample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_online"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:gravity="center"
                android:scaleType="centerInside">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/pic_border_green" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:clickable="true"
                    android:src="@drawable/free_sample" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/etRating"
                android:layout_alignStart="@+id/etRating"
                android:layout_alignTop="@+id/free_sample"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:text="Free sample collection"
                android:textSize="14dp" />

            <RelativeLayout
                android:id="@+id/quality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/free_sample"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:gravity="center"
                android:scaleType="centerInside">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/pic_border_green" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:clickable="true"
                    android:src="@drawable/save_check" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/etRating"
                android:layout_alignStart="@+id/etRating"
                android:layout_alignTop="@+id/quality"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:text="Quality Assurance"
                android:textSize="14dp" />

            <RelativeLayout
                android:id="@+id/view_online_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quality"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:gravity="center"
                android:scaleType="centerInside">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/pic_border_green" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp"
                    android:clickable="true"
                    android:src="@drawable/reports_online" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/etRating"
                android:layout_alignStart="@+id/etRating"
                android:layout_alignTop="@+id/view_online_report"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="13dp"
                android:text="View reports online or via email"
                android:textSize="14dp" />

        </RelativeLayout>
    </ScrollView>

</merge>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
      android:gravity="center"
        android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"

        android:scaleType="fitCenter"
        android:src="@drawable/logo" />
        <Button
            android:id="@+id/loginwith_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/facebook_button"
            android:drawableLeft="@drawable/fb"
            android:text="LOGIN WITH FACEBOOK" />
        <Button
            android:id="@+id/loginwith_zrk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/zureka_signinselector"
            android:drawableLeft="@drawable/z"
            android:text="LOGIN WITH ZUREKA" />
        <Button
            android:id="@+id/findlabs_nerby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/orange_button"
            android:drawableLeft="@drawable/navii"
            android:text="FIND LABS NEAR YOU" />
</LinearLayout>
    <TextView
        android:id="@+id/secret"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/cloud"
        android:textColor="#7f7f7f"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:textSize="14sp" />
</RelativeLayout>

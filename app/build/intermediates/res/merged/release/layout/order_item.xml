<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_item_margin"
        android:layout_marginRight="@dimen/feed_item_margin"
        android:layout_marginTop="@dimen/feed_item_margin"
        android:background="@drawable/bg_parent_round_history"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/relHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/order_heading"
            android:clickable="false"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pkgname"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:text="GENX DIAGNOSTICS"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="#FFFFFF"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/arrow"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="4dp"
            android:padding="10dp">
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/order_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_below="@+id/relHome"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="2dp"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            android:text="ORDER #: "/>

            <TextView
                android:id="@+id/order_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="13dp"
                android:textColor="@android:color/black"
                android:text="C1500002665"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_place_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_below="@+id/order_heading"
            android:padding="5dp"
            android:layout_marginTop="-3dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:padding="2dp"
                android:textSize="12dp"
                android:textColor="@android:color/black"
                android:text="ORDER PLACED : "/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textSize="13dp"
                android:textColor="@android:color/black"
                android:text="26-10-2015"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:clickable="false"
            android:layout_below="@+id/order_place_heading"
            android:orientation="vertical"
            android:background="#80808080"
            android:layout_marginTop="-2dp">
            </LinearLayout>



        <LinearLayout
            android:id="@+id/test_detlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_below="@+id/separator"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/detail_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingLeft="3dp"
                android:textSize="14dp"
                android:textColor="#555555"
                android:text="TEST DETAILS   "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/test_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HI"
                android:maxLines="1"
                android:ellipsize="end"
                android:drawableLeft="@drawable/bullet"
                android:drawablePadding="2dp"
                android:layout_marginLeft="5dp"
                android:textSize="12dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/amount_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:layout_below="@+id/test_detlayout"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/amt_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingLeft="4dp"
                android:textSize="14dp"
                android:textColor="#000000"
                android:text="AMOUNT PAID: "
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14dp"
                android:textColor="@android:color/holo_red_dark"
                android:text="â‚¹ 850"
                android:textStyle="bold"/>

            </LinearLayout>


    </RelativeLayout>




</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lay_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_bg"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/image_lay"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/separator2"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:scaleType="centerInside">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/pic_colored_border" />

            <ImageView
                android:id="@+id/user_pic"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="1dp"
                android:clickable="true"
                android:src="@drawable/dashpic_update" />

        </RelativeLayout>

        <TextView
            android:id="@+id/name_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_lay"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Ashish Kumar"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/member_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_member"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:drawableLeft="@drawable/ic_location_white"
            android:text="New Delhi"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

    </RelativeLayout>

    <ListView
        android:id="@+id/order_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
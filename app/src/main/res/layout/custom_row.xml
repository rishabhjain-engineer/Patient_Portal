<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/back"
            android:tag="back"
            style="@style/MyListBackContent"
         
            >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/swipe_button1"
                style="@style/MyListButtonAction"
             />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/swipe_button2"
                style="@style/MyListButtonAction"
               android:layout_gravity="center"
                 android:text="CANCEL"
              />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/swipe_button3"
                style="@style/MyListButtonAction"
                 android:layout_gravity="center"
                android:text="DELETE"/>

    </LinearLayout>
     <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/front"
            android:tag="front"
            style="@style/MyListFrontContent">

     <!--    <ImageView
                style="@style/MyListImage"
                android:id="@+id/example_image"/>

        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/example_image"
                style="@style/MyListTitle"
                android:id="@+id/example_itemname"/> -->
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       
     
       >

        <TextView
            android:id="@+id/tvTestName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
             android:gravity="left"
           
            android:text="Test Name" />

        <TextView
            android:id="@+id/tvTestPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
           android:layout_gravity="center"
           android:gravity="center"
            android:text="100" />

        <!-- <TextView
            android:id="@+id/tvDiscount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:text="Discount" /> -->

        <TextView
            android:id="@+id/tvPayable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="20"
          
            android:layout_gravity="center"
            
              android:gravity="right"
            
            android:text="500" />
    </LinearLayout>
        


    </RelativeLayout>

</FrameLayout>
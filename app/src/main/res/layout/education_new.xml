<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/scroll_id"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education*:"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:id="@+id/edu" />
            <EditText
            android:id="@+id/etContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:drawableRight="@drawable/down_arrow"
            android:editable="false"
            android:ems="10"
            android:hint=" Select Education level"
            android:singleLine="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Institution Name &amp; Address*:"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:id="@+id/adtxt" />
        <EditText
            android:id="@+id/etSubject"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top"
            android:inputType="textMultiLine|textCapWords"
            android:layout_centerHorizontal="true"
            android:maxLines="4"
            android:ems="10"

            />
        <LinearLayout
            android:id="@+id/hed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="5dp" >

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:ems="10"
                android:text="City*:"
                android:textColor="@android:color/black"

                />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:ems="10"
                android:text="State*:"

                android:textColor="@android:color/black" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/L1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >

            <EditText
                android:id="@+id/editText5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:ems="10"
                android:nextFocusDown="@+id/editText6"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:ems="10"
                android:nextFocusDown="@+id/editText7"
                android:inputType="textCapWords"
                android:singleLine="true"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/h2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/edu_country_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="@android:color/black"
                android:text="Country*:"

                />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:ems="10"
                android:text="Postal code:"

                android:textColor="@android:color/black" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/L2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:ems="10"
                android:drawableRight="@drawable/down_arrow"
               android:editable="false"
                android:singleLine="true"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/editText8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number"
                android:nextFocusDown="@+id/etName"
                android:maxLength="10"
                android:singleLine="true"
                android:textColor="#000000" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/h3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/L2"

            android:layout_marginTop="5dp" >

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"

                android:text="From Date*:"

                android:textColor="@android:color/black"
                />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:text="To Date*:"
                android:textColor="@android:color/black"
                />
            <CheckBox
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:text="Present" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/L3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/L2"

            >

            <EditText
                android:id="@+id/etName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:ems="10"
                android:nextFocusDown="@+id/editText9"
                android:inputType="date" />

            <EditText
                android:id="@+id/editText9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:ems="10"

                android:inputType="date" />
            <CheckBox
                android:id="@+id/cbPresentEdu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_alignRight="@+id/editText9"
                android:text="Present" />
        </LinearLayout>
        <Button
            android:id="@+id/bAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/header_color"
            android:layout_marginTop="10dp"
            android:text="ADD" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bSend"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
           >
        </ListView>

    </LinearLayout>


</ScrollView>

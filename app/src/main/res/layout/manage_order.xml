<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_item_margin"
        android:layout_marginRight="@dimen/feed_item_margin"
        android:layout_marginTop="@dimen/feed_item_margin"
        android:background="@drawable/bg_parent_rounded_corner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage Order"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#565656"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:clickable="false"
            android:layout_below="@+id/order_summary"
            android:orientation="vertical"
            android:background="#FE975F">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:divider="@drawable/divider"
            android:showDividers="middle"
            android:weightSum="100"
            android:padding="1.5dp"
            android:gravity="center"
            android:layout_below="@+id/separator">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_margin="3dp"
                android:clickable="true"
                android:id="@+id/invoice"
                android:background="@drawable/layout_selector"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/invoice"
                    android:padding="25dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="        View Receipt        "
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_margin="3dp"
                android:clickable="true"
                android:id="@+id/viewReportLinear_id"
                android:background="@drawable/layout_selector"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pdf"
                    android:padding="25dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="       View Reports        "
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/separator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:clickable="false"
            android:layout_below="@+id/main_layout"
            android:orientation="vertical"
            android:background="#C4C4C4">
        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:divider="@drawable/divider"
            android:showDividers="middle"
            android:padding="2dp"
            android:weightSum="100"
            android:gravity="center"
            android:layout_below="@+id/separator1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_margin="2dp"
                android:id="@+id/resend_confirmation"
                android:clickable="true"
                android:background="@drawable/layout_selector"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/env"
                    android:padding="20dp"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend Confirmation"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:layout_margin="3dp"
                android:clickable="true"
                android:visibility="gone"
                android:background="@drawable/layout_selector"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/env"
                    android:padding="25dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Resend Confirmation   "
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>


    </merge>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/directory_share_header"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/header_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/toolbar_back_button"
            android:src="@drawable/backarrow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ScionTra"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/white"/>


        <ImageView
            android:id="@+id/add_new_folder"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/add_test"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/directory_share_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_below="@+id/directory_share_header" />


    <Button
        android:id="@+id/directory_share_move_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/header_color"
        android:gravity="center"
        android:text="ADD"
        android:textColor="@color/white" />

</RelativeLayout>
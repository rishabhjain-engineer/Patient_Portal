<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/general_examination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="General Examination"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="height"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="weight"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/allergy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="allergy"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/nails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="nails"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/hair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="Hair"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/skin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="Skin"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/anemia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="Anemia"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="Ear"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/nose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="Nose"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/throat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="Throat"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/neck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="Neck"
            android:textColor="@color/black" />
        ///////////////////

        <TextView
            android:id="@+id/systametic_examination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Systametic Examination"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/respiratory_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="Respiratory System"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/cardio_vascular_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="Cardio Vascular System"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/abdomen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="Abdomen"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/nervous_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="Nervous System"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/eye_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="Eye Left"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/eye_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vaccine_name_tv"
            android:paddingLeft="10dp"
            android:text="Eye Right"
            android:textColor="@color/black" />

    </LinearLayout>
</ScrollView>
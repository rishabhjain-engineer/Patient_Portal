<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/patient_image_view"
        android:layout_width="75dp"
        android:layout_height="85dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ayaz" />

    <RelativeLayout
        android:id="@+id/doctor_detail_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/patient_image_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/patient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/request_time"
            android:text="Patient Name"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/request_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Request Time"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/consult_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/request_time"
            android:text="Consult Time"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/consult_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/consult_time"
            android:text="Consult Mode"
            android:textColor="@color/black"
            android:textSize="15dp" />


    </RelativeLayout>


</RelativeLayout>

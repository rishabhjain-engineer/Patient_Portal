<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/feed_item_margin"
        android:layout_marginRight="@dimen/feed_item_margin"
        android:layout_marginTop="@dimen/feed_item_margin"
        android:background="@drawable/bg_parent_rounded_corner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Case Details"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#565656"
            android:layout_margin="20dp"/>

        <LinearLayout
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:clickable="false"
            android:layout_below="@+id/order_summary"
            android:orientation="vertical"
            android:background="#FE975F">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/labid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_below="@+id/separator">

            <TextView
                android:id="@+id/order_id_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lab Name"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16dp"
                android:layout_weight="50"
                android:textColor="#565656"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/tvpatient"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="16dp"
                android:layout_weight="50"
                android:layout_below="@+id/separator"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/separator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:clickable="false"
            android:layout_below="@+id/labid_layout"
            android:orientation="vertical"
            android:background="#C4C4C4">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/advisedate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_below="@+id/separator1">

            <TextView
                android:id="@+id/advise_date_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Advise Date"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16dp"
                android:layout_weight="50"
                android:textColor="#565656"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/tvname"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16dp"
                android:layout_weight="50"
                android:layout_below="@+id/separator1"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/separator2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:clickable="false"
            android:layout_below="@+id/advisedate_layout"
            android:orientation="vertical"
            android:background="#C4C4C4">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/casename_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_below="@+id/separator2">

            <TextView
                android:id="@+id/lab_name_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Case Code"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16dp"
                android:layout_weight="50"
                android:textColor="#565656"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/tvblood"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="2"
                android:textSize="16dp"
                android:layout_weight="50"
                android:layout_below="@+id/separator2"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/separator3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:clickable="false"
            android:layout_below="@+id/casename_layout"
            android:orientation="vertical"
            android:background="#C4C4C4">
        </LinearLayout>


        <LinearLayout
            android:id="@+id/balance_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_below="@+id/separator3">

            <TextView
                android:id="@+id/balance_pickup_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="16dp"
                android:layout_weight="50"
                android:textColor="#565656"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/tvbalance"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text=""
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="16dp"
                android:layout_marginRight="2dp"
                android:layout_weight="50"
                android:layout_below="@+id/separator3"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/separator4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:clickable="false"
            android:layout_below="@+id/balance_layout"
            android:orientation="vertical"
            android:background="#C4C4C4">
        </LinearLayout>

        <LinearLayout
            android:id="@+id/refer_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_below="@+id/separator4">

            <TextView
                android:id="@+id/refer_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Referred By"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16dp"
                android:layout_weight="50"
                android:textColor="#565656"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/tvreferral"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16dp"
                android:layout_weight="50"
                android:layout_below="@+id/separator3"
                android:layout_marginTop="20dp"/>

        </LinearLayout>


    </RelativeLayout>



</merge>